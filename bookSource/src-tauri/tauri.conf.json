  "package": {
    "productName": "booksource",
    "version": "1.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "process": {
        "relaunch": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "open": true,
        "save": true
      }
    },
    "windows": [
      {
        "title": "书源",
        "width": 1000,
        "height": 400,
        "minWidth": 800,
        "minHeight": 400
