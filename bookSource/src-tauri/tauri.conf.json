    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.chong.li",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
